{
  "name": "@sse-ui/themer",
  "version": "1.3.0",
  "description": "SSE UI styles",
  "license": "MIT",
  "author": "SSE World",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/components/index.d.ts",
        "default": "./dist/components/index.js"
      },
      "require": {
        "types": "./dist/components/index.d.ts",
        "default": "./dist/components/index.js"
      }
    },
    "./components/*": {
      "import": {
        "types": "./dist/components/*.d.ts",
        "default": "./dist/components/*.js"
      },
      "require": {
        "types": "./dist/components/*.d.ts",
        "default": "./dist/components/*.js"
      }
    },
    "./prose": {
      "import": {
        "types": "./dist/prose/index.d.ts",
        "default": "./dist/prose/index.js"
      },
      "require": {
        "types": "./dist/prose/index.d.ts",
        "default": "./dist/prose/index.js"
      }
    },
    "./prose/*": {
      "import": {
        "types": "./dist/prose/*.d.ts",
        "default": "./dist/prose/*.js"
      },
      "require": {
        "types": "./dist/prose/*.d.ts",
        "default": "./dist/prose/*.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/types/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/types/index.js"
      }
    },
    "./types/*": {
      "import": {
        "types": "./dist/types/*.d.ts",
        "default": "./dist/types/*.js"
      },
      "require": {
        "types": "./dist/types/*.d.ts",
        "default": "./dist/types/*.js"
      }
    },
    "./dist": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./dist/*": {
      "import": {
        "types": "./dist/*",
        "default": "./dist/*"
      },
      "require": {
        "types": "./dist/*",
        "default": "./dist/*"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc ./src/index.ts --outDir dist --declaration --esModuleInterop",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sse-ui/core.git",
    "directory": "packages/theme"
  },
  "bugs": {
    "url": "https://github.com/sse-ui/core/issues"
  },
  "homepage": "https://github.com/sse-ui/core#readme"
}
